<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:padding="10dp" android:shrinkColumns="*"
    android:layout_height="match_parent" android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow>
        <EditText android:hint="0" android:id="@+id/edtX"
            android:layout_span="5"/>
    </TableRow>
    <TableRow android:layout_marginBottom="10dp">
        <EditText android:hint="0" android:id="@+id/edtY"
            android:layout_span="5"/>
    </TableRow>

    <TableRow>
        <Button android:text="0" android:id="@+id/btn0" android:layout_marginRight="5dp"/>
        <Button android:text="1" android:id="@+id/btn1" android:layout_marginRight="5dp"/>
        <Button android:text="2" android:id="@+id/btn2" android:layout_marginRight="5dp"/>
        <Button android:text="3" android:id="@+id/btn3" android:layout_marginRight="5dp"/>
        <Button android:text="4" android:id="@+id/btn4" />
    </TableRow>
    <TableRow>
        <Button android:text="5" android:id="@+id/btn5" android:layout_marginRight="5dp"/>
        <Button android:text="6" android:id="@+id/btn6" android:layout_marginRight="5dp"/>
        <Button android:text="7" android:id="@+id/btn7" android:layout_marginRight="5dp"/>
        <Button android:text="8" android:id="@+id/btn8" android:layout_marginRight="5dp"/>
        <Button android:text="9" android:id="@+id/btn9" />
    </TableRow>

    <TableRow>
        <Button android:text="더하기" android:id="@+id/btnAdd"
            android:layout_span="5" android:layout_marginTop="20dp"
            android:backgroundTint="#F321A6"/>
    </TableRow>
    <TableRow>
        <Button android:text="빼기" android:id="@+id/btnSub"
            android:layout_span="5" android:layout_marginTop="20dp"
            android:backgroundTint="#9C27B0"/>
    </TableRow>
    <TableRow>
        <Button android:text="곱하기" android:id="@+id/btnMul"
            android:layout_span="5" android:layout_marginTop="20dp"
            android:backgroundTint="#9C27B0"/>
    </TableRow>
    <TableRow>
        <Button android:text="나누기" android:id="@+id/btnDiv"
            android:layout_span="5" android:layout_marginTop="20dp"/>
    </TableRow>

    <TableRow>
        <TextView android:text="계산 결과 : " android:id="@+id/txtResult"
            android:layout_span="5" android:layout_marginTop="20dp" android:textSize="20dp"
            android:textColor="#FF0000"/>
    </TableRow>
</TableLayout>